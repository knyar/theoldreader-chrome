{
  "manifest_version": 2,
  "name": "The Old Reader Notifier",
  "description": "Notifies you about unread items in your The Old Reader account",
  "version": "0.16",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [ "functions.js", "storage.js", "background.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon-inactive.png",
    "default_title": "The Old Reader"
  },
  "permissions": [
    "tabs",
    "alarms",
    "notifications",
    "storage",
    "*://theoldreader.com/"
  ],
  "web_accessible_resources": [
    "icon-48.png"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://theoldreader.com/*"
      ],
      "js": ["observer.js"],
      "run_at": "document_idle"
    }
  ]
}
